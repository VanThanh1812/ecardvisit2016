<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="250dp">

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/viewCard"
        android:background="@drawable/backcard">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ID"
            android:layout_marginTop="12dp"
            android:textColor="#0b0b0b"
            android:id="@+id/txtId"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_marginRight="24dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imgCongty"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Ho va ten: "
            android:layout_marginTop="50dp"
            android:id="@+id/txtName"
            android:textColor="#0b0b0b"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cong ty: "
            android:textColor="#0b0b0b"

            android:id="@+id/txtCongty"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Chuc vu: "
            android:id="@+id/txtChucvu"
            android:textColor="#0b0b0b"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email: "
            android:id="@+id/txtEmail"
            android:textColor="#0b0b0b"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dia chi: "
            android:id="@+id/txtDiachi"
            android:textColor="#0b0b0b"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="130dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="So dien thoai: "
            android:textSize="15dp"
            android:id="@+id/txtSdt"
            android:textColor="#0b0b0b"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"/>
    </RelativeLayout>

